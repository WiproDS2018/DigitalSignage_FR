        <modal id="custom-modal-1">
            <div class="modal">
                <div class="modal-body">
                    <button type="button" class="close" aria-label="Close" ng-click="vm.closeModal('custom-modal-1');">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class='row'>
                        <div class='col-sm-11 col-md-7 col-lg-7  modalBorder' id="templateContent">
                            <div class="component">
                                <div class="css-device css-device--tablet col-sm-12 col-md-12 col-lg-12 noPadding">
                                    <div class="col-sm-12 col-md-12 col-lg-12">
                                        <h3 class="alignCenter marginTopBottom">{{game}}</h3>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-lg-6 marginTopBottom">
                                        <img ng-src="{{fileSelectedLeft.fileUrl}}" alt="display left">
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-lg-6 marginTopBottom">
                                        <img ng-src="{{fileSelectedRight.fileUrl}}" alt="display Right">
                                    </div>
                                    <div class="scroll-slow col-sm-12 col-md-12 col-lg-12">
                                        <p class="fontFamilyRaleway">{{scrollText}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-11 col-md-4 col-lg-4">
                            <div class="col-sm-11 col-md-11 col-lg-11">
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <h1>Design your board :</h1>
                                    <label for="header">Select the header :</label>
                                    <input type="text" name="header" value="" ng-model="game">

                                    <label for="scrollT">Select the scrollable footer :</label>
                                    <input type="text" name="scrollT" value="" ng-model="scrollText">
                                </div>

                                <div class="col-sm-11 col-md-11 col-lg-11 marginBottom70">
                                    <label for="imgLeft">Select image for left screen :</label>
                                    <dropdown placeholder="Select image.." list="filesLeft" selected="fileSelectedLeft" property="name"></dropdown>
                                </div>
                                <div class="col-sm-11 col-md-11 col-lg-11 marginBottom70">
                                    <label for="imgRight">Select image for right screen :</label>
                                    <dropdown placeholder="Select image.. .." list="filesRight" selected="fileSelectedRight" property="name"></dropdown>
                                </div>
                            </div>
                            <div class="col-sm-11 col-md-11 col-lg-11">
                                <button type="button" class="btn btn-danger" name="button" ng-click="resetTemplate1()">Reset</button>
                                <button type="button" class="btn btn-success pull-right" name="button" ng-click="saveData()">Save</button>
                            </div>
                            <div class="alert alert-success col-sm-12 col-md-12 col-lg-12" ng-show="alertText" style="margin-top: 16px;">
                                <a class="close" data-dismiss="alert" aria-label="close" title="close">&times;</a>
                                <h4 class="sucss_msg pull-left">Template Saved Successfully</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    <div class="modal-background"></div>
