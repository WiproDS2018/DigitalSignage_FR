                                    <label for="price">Enter Price :</label>
                                    <input type="text" name="price" ng-model="priceVal">

                                    <button type="button" class="btn btn-primary" ng-click="menuUpdate()">Save</button>
                                    <button type="button" class="btn btn-danger" ng-click="menuCancel()">Cancel</button>
                                </div>
                            </div>
